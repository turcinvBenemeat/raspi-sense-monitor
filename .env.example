# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sensehat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Logger Configuration
SAMPLE_INTERVAL=5

# Fake Data Mode (for testing/development without hardware)
# Set to 'true' to use fake sensor data instead of real hardware
FAKE_DATA=false

# Device identifier (optional, for multi-Pi setups)
DEVICE_ID=

# Logging Configuration
# Log directory (leave empty to disable file logging, use systemd journal only)
LOG_DIR=/var/log/raspi-sense-monitor
# Log filename
LOG_FILE=sense-logger.log
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=grafana
