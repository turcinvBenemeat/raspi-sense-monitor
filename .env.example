# PostgreSQL Configuration (Remote Server)
# Set POSTGRES_HOST to your remote PostgreSQL server IP address or hostname
POSTGRES_HOST=your-server-ip-or-hostname
POSTGRES_PORT=5432
POSTGRES_DB=sensehat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# Logger Configuration
SAMPLE_INTERVAL=5

# Sensor Configuration
# Enable/disable Sense HAT logging (auto = detect automatically, true/false = force)
ENABLE_SENSEHAT=auto
# Enable/disable system metrics logging
ENABLE_SYSTEM_METRICS=true
# Device identifier for multi-Pi setups (optional, e.g., "raspberry-pi-1", "raspberry-pi-2")
DEVICE_ID=

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=grafana
